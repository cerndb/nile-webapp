{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "experimentalDecorators": false,
    "lib": ["es2015", "dom"],
    "mapRoot": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "compiled",
    "sourceMap": true,
    "target": "es5",
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "compiled",
      "src/**/*.spec.ts",
      "src/**/*.e2e.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
      "forkChecker": true,
      "useWebpackText": true
    },
    "angularCompilerOptions": {
      "genDir": "compiled",
      "skipMetadataEmit": true
    }
  }
}
